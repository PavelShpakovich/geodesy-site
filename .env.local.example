# Contentful Configuration
# Get these from: https://app.contentful.com/spaces/YOUR_SPACE_ID/api/keys
CONTENTFUL_SPACE_ID=your_space_id_here
CONTENTFUL_ACCESS_TOKEN=your_delivery_api_token_here
CONTENTFUL_PREVIEW_ACCESS_TOKEN=your_preview_api_token_here

# For type generation only (keep secret, don't commit)
CONTENTFUL_MANAGEMENT_TOKEN=your_management_token_here

# Enable preview mode (set to 'true' to use Preview API)
CONTENTFUL_PREVIEW_MODE=false

# Secret for enabling preview mode via API route
CONTENTFUL_PREVIEW_SECRET=your_random_secret_here

# Site Configuration  
NEXT_PUBLIC_SITE_URL=http://localhost:3000
SITE_URL=http://localhost:3000
